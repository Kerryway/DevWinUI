<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.ShimmerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="10">
            <local:ControlExample DocPage="controls/shimmer"
                                  HeaderText="Shimmer">
                <local:ControlExample.Xaml>
                    <x:String>
                        &lt;Shimmer/&gt;
                    </x:String>
                </local:ControlExample.Xaml>
                <local:ControlExample.Pane>
                    <ToggleSwitch x:Name="TGIsActive"
                                  Header="IsActive"
                                  IsOn="True" />
                </local:ControlExample.Pane>
                <StackPanel Spacing="5">
                    <Border Height="30" Width="300">
                        <dev:Shimmer IsActive="{x:Bind TGIsActive.IsOn, Mode=OneWay}"/>
                    </Border>
                    <Border Height="30" Width="280">
                        <dev:Shimmer IsActive="{x:Bind TGIsActive.IsOn, Mode=OneWay}"/>
                    </Border>
                    <Border Height="30" Width="200">
                        <dev:Shimmer IsActive="{x:Bind TGIsActive.IsOn, Mode=OneWay}"/>
                    </Border>
                    <Border Height="30" Width="150">
                        <dev:Shimmer IsActive="{x:Bind TGIsActive.IsOn, Mode=OneWay}"/>
                    </Border>
                    <Border Height="30" Width="260">
                        <dev:Shimmer IsActive="{x:Bind TGIsActive.IsOn, Mode=OneWay}"/>
                    </Border>
                    <Border Height="50" Width="50" CornerRadius="180">
                        <dev:Shimmer IsActive="{x:Bind TGIsActive.IsOn, Mode=OneWay}"/>
                    </Border>
                </StackPanel>
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>
</Page>
