<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.MessageBoxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="10">
            <local:ControlExample DocPage="controls/messagebox"
                                  HeaderText="MessageBox">
                <local:ControlExample.CSharp>
                    <x:String>
                        await MessageBox.ShowAsync("Content", "Title");
                    </x:String>
                </local:ControlExample.CSharp>
                <local:ControlExample.Pane>
                    <StackPanel Spacing="10">
                        <TextBox Header="Title" x:Name="txtTitle" Text="Title" PlaceholderText="Title"/>
                        <TextBox Header="Content" x:Name="txtContent" Text="Content" PlaceholderText="Content"/>
                    </StackPanel>
                </local:ControlExample.Pane>
                <Button Content="Show MessageBox" Click="Button_Click"/>
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>

</Page>
