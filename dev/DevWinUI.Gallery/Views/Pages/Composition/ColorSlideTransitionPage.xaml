<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="DevWinUIGallery.Views.ColorSlideTransitionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:DevWinUIGallery"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="10">
            <local:ControlExample CSharpSource="Composition/ColorSlideTransition/ColorSlideTransitionPage_cs.txt"
                                  DocPage="common/colorSlideTransitionPage"
                                  XamlSource="Composition/ColorSlideTransition/ColorSlideTransitionPage_xaml.txt">
                <Grid x:Name="MainGrid"
                      Height="200"
                      SizeChanged="OnSizeChanged">

                    <Rectangle x:Name="HostForVisual" />

                    <StackPanel Orientation="Horizontal"
                                Spacing="10">
                        <AppBarButton x:Name="Pictures"
                                      Background="Orange"
                                      Click="Header_Click"
                                      Icon="Pictures" />

                        <AppBarButton x:Name="ContactInfo"
                                      Background="Lavender"
                                      Click="Header_Click"
                                      Icon="ContactInfo" />

                        <AppBarButton x:Name="Download"
                                      Background="GreenYellow"
                                      Click="Header_Click"
                                      Icon="Download" />

                        <AppBarButton x:Name="Comment"
                                      Background="DeepSkyBlue"
                                      Click="Header_Click"
                                      Icon="Comment" />
                    </StackPanel>
                </Grid>
            </local:ControlExample>
        </StackPanel>
    </ScrollViewer>
</Page>
